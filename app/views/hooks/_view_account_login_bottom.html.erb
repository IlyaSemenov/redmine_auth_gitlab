<%= stylesheet_link_tag 'buttons', :plugin => 'redmine_auth_gitlab' %>

<% if Setting.plugin_redmine_auth_gitlab[:use_gitlab_authentication] %>
  <%= link_to oauth_gitlab_path(:back_url => back_url) do %>
    <%= button_tag :class => 'button-login' do %>
      <%= image_tag('/plugin_assets/redmine_auth_gitlab/images/gitlab_icon.svg', :class => 'button-login-icon', :alt => l(:login_via_gitlab)) %>
      <%= content_tag :div, l(:login_via_gitlab), :class => 'button-login-text' %>
    <% end %>
  <% end %>
<% end %>
